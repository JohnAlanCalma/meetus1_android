<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context="com.example.yun.meetup.activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        android:padding="16dp"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:id="@+id/txt_welcome_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="Welcome, "
            android:layout_marginBottom="12dp"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/btn_search"
            android:layout_margin="8dp"
            android:background="@drawable/background_button"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search an Event" />

        <Button
            android:id="@+id/btn_subscribed_events"
            android:layout_margin="8dp"
            android:background="@drawable/background_button"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My subscribed events " />

        <Button
            android:id="@+id/btn_create_event"
            android:layout_margin="8dp"
            android:background="@drawable/background_button"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create an Event" />

        <Button
            android:id="@+id/btn_my_hosted_events"
            android:layout_margin="8dp"
            android:background="@drawable/background_button"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My hosted events" />


    </LinearLayout>
</FrameLayout>
