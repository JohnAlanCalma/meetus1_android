<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yun.meetup">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.RegistrationActivity" />
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.CreateEventActivity" />
        <activity
            android:name=".activities.EventListActivity"
            android:label="Event list"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.yun.meetup.activities.MainActivity" />
        </activity>
        <activity android:name=".activities.EventDetailsActivity" />
        <activity
            android:name=".activities.MySubscribedEventsActivity"
            android:label="@string/title_activity_my_subscribed_events"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.yun.meetup.activities.MainActivity" />
        </activity>
        <activity android:name=".activities.SearchEventActivity"></activity>
    </application>

</manifest>